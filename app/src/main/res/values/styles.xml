<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- home styles -->

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
	</style>
	<style name="semibold60px" parent="TextAppearance.AppCompat">
		<item name="android:fontFamily">@font/inter_semibold</item>
		<item name="android:textColor">@color/text_semiblack</item>
		<item name="android:textSize">60dp</item>
	</style>
	<style name="bold60px" parent="TextAppearance.AppCompat">
		<item name="android:fontFamily">@font/inter_bold</item>
		<item name="android:textColor">@color/text_semiblack</item>
		<item name="android:textSize">30dp</item>
	</style>
	<style name="bold45px" parent="TextAppearance.AppCompat">
		<item name="android:fontFamily">@font/inter_bold</item>
		<item name="android:textColor">@color/text_semiblack</item>
		<item name="android:textSize">30dp</item>
	</style>
	<style name="semibold45px" parent="TextAppearance.AppCompat">
		<item name="android:fontFamily">@font/inter_semibold</item>
		<item name="android:textColor">@color/noticias_color</item>
		<item name="android:textSize">20dp</item>
	</style>

	<style name="hintText">
		<item name="android:textColorHint">#8A535353</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textColor">@color/black</item>
		<item name="fontFamily"> @font/inter_medium</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:drawablePadding">15dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_width">326dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:background">@drawable/edittext_png</item>
	</style>

	<style name="adapterList">
		<item name="fontFamily"> @font/inter_semibold</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="dialog">
		<item name="cardCornerRadius">15dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="cardElevation">10dp</item>
	</style>
</resources>