<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C5C0FF"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/containervieww"
        android:layout_width="396dp"
        android:layout_height="760dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/shapedocliente"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="293dp"
        android:layout_height="43dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Editar cliente"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@id/containervieww"
        app:layout_constraintStart_toStartOf="@id/containervieww"
        app:layout_constraintTop_toTopOf="@id/containervieww" />

    <EditText
        style="@style/hintText"
        android:id="@+id/etxtNomeCliente"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/btncliente"
        android:drawableLeft="@drawable/ic_baseline_drive_file_rename_outline_24"
        android:ems="10"
        android:hint="Nome do cliente"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@id/containervieww"
        app:layout_constraintStart_toStartOf="@id/containervieww"
        app:layout_constraintTop_toTopOf="@id/containervieww" />

    <EditText
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:id="@+id/etxtEmailCliente"
        android:paddingLeft="10dp"
        style="@style/hintText"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btncliente"
        android:ems="10"
        android:hint="@string/hintEmailCliente"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@id/containervieww"
        app:layout_constraintStart_toStartOf="@id/containervieww"
        app:layout_constraintTop_toBottomOf="@+id/etxtNomeCliente" />

    <EditText
        android:id="@+id/etxtFoneCliente"
        style="@style/hintText"
        android:paddingLeft="10dp"
        android:layout_marginStart="28dp"
        android:drawableLeft="@drawable/vetor_phone"
        android:layout_marginTop="44dp"
        android:background="@drawable/btncliente"
        android:ems="10"
        android:hint="@string/hintFoneCliente"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@id/containervieww"
        app:layout_constraintStart_toStartOf="@id/containervieww"
        app:layout_constraintTop_toBottomOf="@+id/etxtEmailCliente" />

    <EditText
        android:drawableLeft="@drawable/vetor_checkbox"
        android:id="@+id/etxtStatusCliente"
        style="@style/hintText"
        android:paddingLeft="10dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btncliente"
        android:ems="10"
        android:hint="@string/hintStatusCliente"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@id/containervieww"
        app:layout_constraintStart_toStartOf="@id/containervieww"
        app:layout_constraintTop_toBottomOf="@+id/etxtFoneCliente" />

    <ImageView
        android:id="@+id/btnEditCliente"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/botaoeditaar"
        android:text="@string/btnEditCliente"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/btnExcluir"
       app:layout_constraintEnd_toEndOf="@+id/containervieww"
        app:layout_constraintTop_toBottomOf="@+id/etxtStatusCliente" />

    <ImageView
        android:layout_marginStart="7dp"
        android:id="@+id/btnExcluir"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/botaoexcluirr"
        android:text="@string/btnExcluir"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/btnEditCliente"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toEndOf="@+id/btnAdicionarPedido"
        app:layout_constraintTop_toBottomOf="@+id/etxtStatusCliente" />

    <ImageView
        android:id="@+id/btnAdicionarPedido"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/btnpedidooo"
        android:text="@string/btnAdicionarPedido"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/btnEditCliente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/containervieww"
        app:layout_constraintTop_toBottomOf="@+id/etxtStatusCliente" />

</androidx.constraintlayout.widget.ConstraintLayout>