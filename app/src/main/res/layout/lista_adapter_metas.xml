<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="150dp">


    <!-- Adicione os novos elementos aqui -->

    <TextView
        android:id="@+id/txtValorInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:text="@string/txtValorInicial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeMeta" />

    <TextView
        android:id="@+id/txtValorMeta"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="100dp"
        android:text="Valor Meta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="244dp"
        android:layout_height="17dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="92dp"
        app:layout_constraintEnd_toStartOf="@+id/txtValorMeta"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/txtValorInicial"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeMeta" />

    <TextView
        android:id="@+id/txtNomeMeta"
        android:layout_width="320dp"
        android:layout_height="37dp"
        android:layout_marginStart="44dp"
        android:layout_weight="1"
        android:text="@string/txtNome"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>